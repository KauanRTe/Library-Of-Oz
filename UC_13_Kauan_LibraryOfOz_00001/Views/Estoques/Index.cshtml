@model IEnumerable<UC_13_Kauan_LibraryOfOz_00001.Models.Estoque>

@{
    ViewData["Title"] = "Index";
}

<body>
    <section class="container-tabela">

    <h1 id="title-tabela">Estoque de Livros</h1>

<table class="table">
    <a class="btn-adicionaritem" asp-action="Create">Adicionar Livro</a>
    <thead>
        <tr>
            <th>
               <p class="item-title">@Html.DisplayNameFor(model => model.NomeLivro)</p>
            </th>
            <th>
               <p class="item-title">@Html.DisplayNameFor(model => model.Preco)</p>
            </th>
            <th>
                <p class="item-title">@Html.DisplayNameFor(model => model.Quantidade)</p>
            </th>
            <th>
                <p class="item-title">@Html.DisplayNameFor(model => model.Disponibilidade)</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                            <p class="item-title">@Html.DisplayFor(modelItem => item.NomeLivro)</p>
            </td>
            <td>
                            <p class="item-title">@Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                            <p class="item-title">@Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                            <p class="item-title">@Html.DisplayFor(modelItem => item.Disponibilidade)
            </td>
            <td>
                <a class="btn-controllers" asp-action="Edit" asp-route-id="@item.EstoqueId">Editar</a> |
                <a class="btn-controllers" asp-action="Details" asp-route-id="@item.EstoqueId">Detalhes</a> |
                <a class="btn-controllers" asp-action="Delete" asp-route-id="@item.EstoqueId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
</section>

</body>
